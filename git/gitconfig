[core]
    editor = vim
[alias]
    A = add -A
    a = add
    b = branch
    ck = checkout
    ct = commit
    cl = clone
    df = diff
    ds = diff --cached
    l = log
    ph = push
    pl = pull
    r = rebase
    ss = status
    st = stash
    unstage = reset HEAD --
    last = log -1 -p
    tags = tag -l
    branches = branch --all
    remotes = remote --verbose
    contributors = shortlog --summary --numbered
    whoami = config user.email
[push]
    default = current
[pull]
	ff = only
[url "git@github.com:"]
	insteadOf = https://github.com/
