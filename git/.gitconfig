[user]
	name = Pranit Bauva
	email = pranit@bauva.com
[core]
    editor = vim
# [github]
#     user = pranitbauva1997
# [gitlab]
#     user = pranitbauva1997
[alias]
    A = add -A
    a = add
    b = branch
    ck = checkout
    ct = commit
    cl = clone
    df = diff
    ds = diff --cached
    l = log
    ph = push
    pl = pull
    r = rebase
    ss = status
    st = stash
[push]
    default = current
[pull]
	ff = only
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/
[commit]
	verbose = 2
[blame]
    date = short
